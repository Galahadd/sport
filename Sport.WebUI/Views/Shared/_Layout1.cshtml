
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Sport.WebUI</title>
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    @RenderSection("Classlar", required: false)
    <link href="~/webb/css/bootstrap.css" rel="stylesheet" />
    <link href="~/webb/css/style.css" rel="stylesheet" />
    <link href="~/webb/css/font-awesome.min.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese"
          rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese"
          rel="stylesheet">
</head>

<body>
    <!-- header -->
    <header>
        <div class="container">
            <div class="header d-lg-flex justify-content-between align-items-center py-2 px-sm-2 px-1">
                <!-- logo -->
                <div id="logo">
                    <h1><a asp-controller="Home" asp-action="Calculator"><span class="text-bl">Fit</span>ol</a></h1>
                </div>
                <!-- //logo -->
                <!-- nav -->
                <div class="nav_w3ls ml-lg-5">
                    <nav>
                        <label for="drop" class="toggle">Menu</label>
                        <input type="checkbox" id="drop" />
                        <ul class="menu">
                            <li><a asp-controller="Home" asp-action="Calculator">Anasayfa</a></li>
                            <li><a asp-action="Calculator" asp-controller="Home">Kalori Hesapla</a></li>
                            <li><a asp-action="Index" asp-controller="Foods">Besinler</a></li>
                            <li><a asp-action="Index" asp-controller="Movements">Hareketler</a></li>
                            <li><a asp-action="Login" asp-controller="Home">Giriş Yap</a></li>
                            <li><a asp-action="Register" asp-controller="Home">Kayıt Ol</a></li>
                        </ul>
                    </nav>
                </div>
                <!-- //nav -->
            </div>
        </div>
    </header>
    <!-- //header -->
    <!-- banner -->
    <div class="main-w3pvt mian-content-wthree text-center" id="home">
        <div class="container">

            @RenderSection("NormalLayout", required: false)
        </div>
    </div>
    <!-- //banner -->
    <!-- banner bottom -->
    <section class="w3ls-bnrbtm py-5" id="about">
        <div class="container py-xl-5 py-lg-3">
            @RenderBody()
            @*burasıda render sectoin olablir buna da bakacağız*@
        </div>
    </section>

    <div class="copyright-w3ls py-4">
        <div class="container">
            <div class="row">
                <!-- copyright -->
                <p class="col-lg-8 copy-right-grids text-wh text-lg-left text-center mt-lg-2">
                    © 2019
                    <a href="https://w3layouts.com/" target="_blank">FitOl</a>
                </p>
                <!-- //copyright -->
                <!-- social icons -->

            </div>
        </div>
    </div>
    <!-- //copyright -->
    <!-- move top icon -->
    <a href="#home" class="move-top text-center">
        <span class="fa fa-angle-double-up" aria-hidden="true"></span>
    </a>
    <!-- //move top icon -->
    @RenderSection("Siktipt", required: false)
</body>

</html>