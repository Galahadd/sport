@model Sport.Domain.Entities.Food

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaloriValue" class="control-label"></label>
                <input asp-for="CaloriValue" class="form-control" />
                <span asp-validation-for="CaloriValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProteinValue" class="control-label"></label>
                <input asp-for="ProteinValue" class="form-control" />
                <span asp-validation-for="ProteinValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarbohydrateValue" class="control-label"></label>
                <input asp-for="CarbohydrateValue" class="form-control" />
                <span asp-validation-for="CarbohydrateValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OilValue" class="control-label"></label>
                <input asp-for="OilValue" class="form-control" />
                <span asp-validation-for="OilValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FiberValue" class="control-label"></label>
                <input asp-for="FiberValue" class="form-control" />
                <span asp-validation-for="FiberValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodPhoto" class="control-label"></label>
                <input asp-for="FoodPhoto" class="form-control" />
                <span asp-validation-for="FoodPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnumFoodType" class="control-label"></label>
                <select asp-for="EnumFoodType" class="form-control" style="width:200px;">
                    <option value="0">Kırmızı Et </option>
                    <option value="1">Beyaz Et</option>
                    <option value="2">Meyve </option>
                    <option value="3">Sebzeler</option>
                    <option value="4">Bakliyat </option>
                    <option value="5">KuruBaklagil </option>
                    <option value="6">Sıvı </option>
                </select>
                <span asp-validation-for="EnumFoodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Besin Listesi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
