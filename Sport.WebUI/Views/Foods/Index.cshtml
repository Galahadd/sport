@model IEnumerable<Sport.Domain.Entities.Food>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddFood">Add new food</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProteinValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarbohydrateValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OilValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiberValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnumFoodType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProteinValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarbohydrateValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OilValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiberValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnumFoodType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
